    "update_notifications": "curl -X PATCH http://127.0.0.1:8000/api/v1/auth/profile/details/ -H \"Content-Type: application/json\" -H \"Authorization: Bearer YOUR_TOKEN\" -d '{\"email_notifications\": false, \"push_notifications\": true, \"health_reminders\": false}'"
