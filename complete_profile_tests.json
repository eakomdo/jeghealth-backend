  "field_information": {
    "editable_fields": {
      "gender": {
        "type": "CharField",
        "choices": ["M", "F"],
        "case_insensitive": true,
        "description": "User's gender - Male or Female only"
      },
      "height": {
        "type": "FloatField",
        "unit": "centimeters",
        "description": "User's height in centimeters"
      },
      "weight": {
        "type": "FloatField", 
        "unit": "kilograms",
        "description": "User's weight in kilograms"
      },
      "blood_type": {
        "type": "CharField",
        "choices": ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-", "UNKNOWN"],
        "description": "User's blood type"
      },
      "medical_conditions": {
        "type": "TextField",
        "description": "List of chronic conditions, allergies, or important medical history"
      },
      "current_medications": {
        "type": "TextField",
        "description": "List of current medications and dosages"
      },
      "allergies": {
        "type": "TextField",
        "description": "List of known allergies"
      },
      "health_goals": {
        "type": "TextField",
        "description": "Personal health and fitness goals"
      },
      "activity_level": {
        "type": "CharField",
        "choices": ["SEDENTARY", "LIGHT", "MODERATE", "ACTIVE", "VERY_ACTIVE"],
        "description": "User's activity level"
      },
      "email_notifications": {
        "type": "BooleanField",
        "description": "Whether to receive email notifications"
      },
      "push_notifications": {
        "type": "BooleanField",
        "description": "Whether to receive push notifications"
      },
      "health_reminders": {
        "type": "BooleanField",
        "description": "Whether to receive health reminders"
      }
    },
    "readonly_fields": {
      "bmi": {
        "description": "Body Mass Index - calculated automatically from height and weight"
      },
      "created_at": {
        "description": "Timestamp when profile was created"
      },
      "updated_at": {
        "description": "Timestamp when profile was last updated"
      }
    }
  }
}
